generator client {
  provider   = "prisma-client"
  output     = "../lib/generated/prisma"
  engineType = "client" // enable Prisma ORM without Rust
}

datasource db {
  provider = "sqlite" //"postgresql"
}

model User {
  id                 Int                 @id @default(autoincrement())
  username           String              @unique
  email              String?             @unique
  password           String?
  //phone      String?    @unique
  //github_id  String?    @unique
  avatar             String?
  created_at         DateTime            @default(now())
  updated_at         DateTime            @updatedAt
  //tokens     SMSToken[]
  posts              Post[]
  comments           PostComment[]
  likes              PostLike[]
  products           Product[]
  wishes             Wish[]
  messages           Message[]
  chat_rooms         ChatRoom[]
  university         University?         @relation(fields: [universityId], references: [id])
  universityId       Int?
  univReviews        UnivReview[]
  univReviewLikes    UnivReviewLike[]
  univReviewComments UnivReviewComment[]
}

model Post {
  id         Int      @id @default(autoincrement())
  title      String
  content    String
  views      Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  comments PostComment[]
  likes    PostLike[]
}

model PostComment {
  id         Int      @id @default(autoincrement())
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId Int
  postId Int
}

model PostLike {
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId Int
  postId Int

  @@id(name: "id", [userId, postId])
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  views       Int      @default(0)
  price       Float
  photo       String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user   User   @relation(fields: [userId], references: [id])
  userId Int
  wishes Wish[]
}

model Wish {
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user      User    @relation(fields: [userId], references: [id])
  product   Product @relation(fields: [productId], references: [id])
  userId    Int
  productId Int

  @@id(name: "id", [userId, productId])
}

model ChatRoom {
  id    String @id @default(cuid()) //보안 강화 & 여러 서버에서 동시에 ID를 만드는 경우 중복 방지
  users User[]

  created_at DateTime  @default(now())
  updated_at DateTime  @updatedAt
  messages   Message[]
}

model Message {
  id      Int    @id @default(autoincrement())
  content String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id])
  userId     Int
  chatRoomId String
}

model University {
  id             Int     @id @default(autoincrement())
  //hipolabs api
  name           String
  website        String?
  country        String?
  domain         String? @unique
  //google api
  placeId        String  @unique
  lat            Float?
  lng            Float?
  address        String?
  photoReference String?
  googleRating   Float?
  googleReviews  Json?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  users       User[]
  univReviews UnivReview[]
}

model UnivReview {
  id         Int      @id @default(autoincrement())
  academic   String
  campus     String
  cost       String
  culture    String
  views      Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user               User                @relation(fields: [userId], references: [id])
  university         University          @relation(fields: [universityId], references: [id])
  userId             Int
  universityId       Int
  univReviewLikes    UnivReviewLike[]
  univReviewComments UnivReviewComment[]
}

model UnivReviewLike {
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  univReview   UnivReview @relation(fields: [univReviewId], references: [id], onDelete: Cascade)
  userId       Int
  univReviewId Int

  @@id(name: "id", [userId, univReviewId])
}

model UnivReviewComment {
  id         Int      @id @default(autoincrement())
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  univReview   UnivReview @relation(fields: [univReviewId], references: [id], onDelete: Cascade)
  userId       Int
  univReviewId Int
}
