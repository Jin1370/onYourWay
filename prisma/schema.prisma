generator client {
  provider   = "prisma-client"
  output     = "../lib/generated/prisma"
  engineType = "client" // enable Prisma ORM without Rust
}

datasource db {
  provider = "sqlite" //"postgresql"
}

enum PostType {
  LIFELOG
  FREE
}

model User {
  id              Int              @id @default(autoincrement())
  username        String           @unique
  email           String?          @unique
  password        String?
  fcmToken        String?
  //phone      String?    @unique
  //github_id  String?    @unique
  avatar          String?
  created_at      DateTime         @default(now())
  updated_at      DateTime         @updatedAt
  //tokens     SMSToken[]
  posts           Post[]
  comments        PostComment[]
  likes           PostLike[]
  products        Product[]
  wishes          Wish[]
  messages        Message[]
  interestedUnivs University[]     @relation("UserUnivInterests")
  affiliatedUniv   University?      @relation("UserAffiliatedUniv", fields: [affiliatedUnivId], references: [id])
  affiliatedUnivId Int?
  chatRoomMembers ChatRoomMember[]
}

model Post {
  id         Int      @id @default(autoincrement())
  postType   PostType @default(LIFELOG)
  title      String
  content    String
  views      Int      @default(0)
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId Int

  comments PostComment[]
  likes    PostLike[]
}

model PostComment {
  id         Int      @id @default(autoincrement())
  content    String
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId Int
  postId Int
}

model PostLike {
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user   User @relation(fields: [userId], references: [id], onDelete: Cascade)
  post   Post @relation(fields: [postId], references: [id], onDelete: Cascade)
  userId Int
  postId Int

  @@id(name: "id", [userId, postId])
}

model Product {
  id          Int      @id @default(autoincrement())
  title       String
  description String
  views       Int      @default(0)
  price       Float
  photo       String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  user      User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId    Int
  wishes    Wish[]
  chatRooms ChatRoom[]
}

model Wish {
  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user      User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    Int
  productId Int

  @@id(name: "id", [userId, productId])
}

model ChatRoom {
  id   String @id @default(cuid()) //보안 강화 & 여러 서버에서 동시에 ID를 만드는 경우 중복 방지
  type String @default("DIRECT") //1:1 채팅을 기본으로

  university   University? @relation(fields: [universityId], references: [id])
  universityId Int?        @unique

  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId Int?

  members  ChatRoomMember[]
  messages Message[]

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt
}

model ChatRoomMember {
  id String @id @default(cuid())

  user   User @relation(fields: [userId], references: [id])
  userId Int

  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  chatRoomId String

  is_muted     Boolean  @default(false)
  last_read_at DateTime @default(now())

  //한 유저가 같은 방에 중복 입장 방지
  @@unique([userId, chatRoomId])
}

model Message {
  id      Int    @id @default(autoincrement())
  content String

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  user       User     @relation(fields: [userId], references: [id])
  chatRoom   ChatRoom @relation(fields: [chatRoomId], references: [id], onDelete: Cascade)
  userId     Int
  chatRoomId String
}

model University {
  id             Int     @id @default(autoincrement())
  //hipolabs api
  name           String  @unique
  website        String?
  country        String?
  domain         String? @unique
  //google api
  placeId        String  @unique
  lat            Float?
  lng            Float?
  address        String?
  photoReference String?
  googleRating   Float?
  googleReviews  Json?

  created_at DateTime @default(now())
  updated_at DateTime @updatedAt

  interestedBy User[]     @relation("UserUnivInterests")
  affiliatedUsers User[]  @relation("UserAffiliatedUniv")
  chatRooms    ChatRoom[]
}
